<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_explicit">

        <CheckBoxPreference
            android:key="pref_show_explicit"
            android:title="@string/pref_title_explicit"
            android:summary="@string/pref_description_explicit"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_download">

        <CheckBoxPreference
            android:key="pref_download_mobile"
            android:title="@string/pref_title_mobile"
            android:summary="@string/pref_description_mobile"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="pref_download_wifi"
            android:title="@string/pref_title_wifi"
            android:summary="@string/pref_description_wifi"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_vip">

        <Preference android:title="@string/pref_title_vip" >
            <intent android:action="android.intent.action.VIEW"
                android:data="https://www.keithandthegirl.com/vip/?display=true" />
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>
