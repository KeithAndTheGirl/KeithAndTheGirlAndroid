<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/about_podcasting_guide"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="@dimen/about_text_size"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:paddingBottom="18dp"
            android:text="Keith and The Girl wrote the book on podcasting. Literally. They took all the information that they accumulated over years of podcasting ― added tips, interviews, and video tutorials from leading experts ― and released"/>

        <ImageView
            android:id="@+id/getTheGuideImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Transparent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/about_get_the_guide"/>

        <Button
            android:id="@+id/getTheGuideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/Transparent"
            android:padding="16dp"
            android:textColor="@color/White"
            android:text="Get the Guide"/>

    </LinearLayout>

</FrameLayout>