<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keithandthegirl.app.ui.episodes.EpisodeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/episode_heading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/episode_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/katg_episode_light"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="date" />

            <TextView
                android:id="@+id/episode_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:textColor="@color/katg_show_title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="number"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="3dp" />

            <TextView
                android:id="@+id/episode_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="title" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/episode_guests_label" />

        <TextView
            android:id="@+id/episode_guest_names"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/episode_no_guests" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/episode_guests"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/episode_status"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/katg_show_status">

        <TextView
            android:id="@+id/episode_played"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/episode_not_played"
            />

        <TextView
            android:id="@+id/episode_downloaded"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/episode_not_downloaded"
            />

    </LinearLayout>

</LinearLayout>
