<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keithandthegirl.app.ui.EpisodeActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/episode_header"
            android:layout_width="match_parent"
            android:layout_height="125dp" />

        <FrameLayout
            android:id="@+id/episode_guests"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp" />

        <FrameLayout
            android:id="@+id/episode_guest_images"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp" />

        <FrameLayout
            android:id="@+id/episode_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <FrameLayout
            android:id="@+id/episode_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

    </LinearLayout>

</ScrollView>