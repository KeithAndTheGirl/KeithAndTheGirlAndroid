<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.keithandthegirl.app.ui.episode.EpisodeActivity"
    tools:ignore="MergeRootFrame">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/transport_thumb_margin_adjust"/>

    <include
        layout="@layout/view_playback_transport_control"
        android:id="@+id/playbackLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>